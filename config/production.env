# ==============================================================================
# FlightIO Crawler - Production Environment Configuration
# ==============================================================================

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
APP_NAME=FlightIO_Crawler
APP_VERSION=2.0.0

# Database Configuration
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_NAME=flight_data_production
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL_MODE=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_SSL=true

# Security Settings
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_EXPIRATION_HOURS=12
ALLOWED_HOSTS=${ALLOWED_HOSTS}
CORS_ORIGINS=${CORS_ORIGINS}

# Crawler Settings
MAX_WORKERS=8
CRAWLER_TIMEOUT=60
REQUEST_DELAY=2
MAX_RETRIES=3
HEADLESS_MODE=true
BROWSER_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000
REQUESTS_PER_DAY=10000

# Monitoring & Metrics
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
ALERT_EMAIL=${ALERT_EMAIL}

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
ENABLE_SWAGGER=false
API_PREFIX=/api/v1

# External Services
AMADEUS_API_KEY=${AMADEUS_API_KEY}
AMADEUS_API_SECRET=${AMADEUS_API_SECRET}

# File Storage
UPLOAD_FOLDER=/app/uploads
STORAGE_TYPE=s3
S3_BUCKET_NAME=${S3_BUCKET_NAME}

# Caching
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600
CACHE_REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0

# Background Tasks
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0

# Production Features
USE_MOCK_DATA=false
ENABLE_PROFILING=false

# Kubernetes Settings
K8S_NAMESPACE=flightio-production
K8S_REPLICAS=5
K8S_CPU_REQUEST=500m
K8S_CPU_LIMIT=2000m
K8S_MEMORY_REQUEST=1Gi
K8S_MEMORY_LIMIT=2Gi 